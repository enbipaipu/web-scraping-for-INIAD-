{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "outDir": "./compiled_files",
    "rootDir": "./lambda",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./lambda/**/*.ts", "lambda/deploy_json.mjs"],
  "exclude": ["node_modules", "**/*.spec.ts", "lambda/save_info.json"]
}
